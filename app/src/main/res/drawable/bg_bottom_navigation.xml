<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/roxo_escuro"
                android:endColor="#BF000000"
                android:centerX="100%"
                android:angle="270"/>
            <corners android:topRightRadius="50dp" android:topLeftRadius="50dp"/>
        </shape>
    </item>
    <item android:top="8dp" android:right="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/roxo_escuro"/>
            <corners android:topLeftRadius="50dp" android:topRightRadius="50dp"/>
        </shape>
    </item>
</layer-list>